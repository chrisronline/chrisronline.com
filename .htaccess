RewriteEngine on
RewriteRule ^api/([a-zA-Z0-9]+)$ src/server/api.php?method=$1
RewriteCond %{HTTP_HOST} !^www\.
RewriteRule ^(.*)$ http://www.%{HTTP_HOST}/$1 [R=301,L]
RewriteCond %{REQUEST_URI} !^/src/web/dist/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /src/web/dist/$1
RewriteRule ^(/)?$ src/web/dist/index.html [L]
